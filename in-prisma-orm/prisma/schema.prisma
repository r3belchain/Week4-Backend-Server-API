// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  phone String
  todos Todo[]
}

enum Status {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Todo {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  status      Status @default(DRAFT)
  userId      Int
  user        User   @relation(fields: [userId], references: [id],  onDelete: Cascade)
}
